<Page x:Class="CinemaManagementProject.View.Admin.MovieManagement.MovieManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CinemaManagementProject.View.Admin.MovieManagement"
      mc:Ignorable="d"
      xmlns:Search="clr-namespace:CinemaManagementProject.Component.Search"
      xmlns:Component="clr-namespace:CinemaManagementProject.Component" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="MovieManagementPage"
      Width="1140" Height="760">

    <Grid Width="1140" Height="760" >
        <Grid Grid.Column="1" Background="#BCD8F1">

            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--Header-->
            <Grid Grid.Row="0">
                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button 
                        Margin="0, 0, 2, 0" 
                        Height="50" Width="50" 
                        Background="Transparent" 
                        BorderThickness="0">
                        <Image 
                            Width="20" Height="20"
                            Source="{StaticResource Icon_CloseTab}" 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Center"/>
                    </Button>
                    <Button 
                        Height="50" Width="50" 
                        Background="Transparent" 
                        BorderThickness="0"
                        Margin="0,0,10,0">
                        <Image 
                            Height="36" Width="36"
                            Source="{StaticResource Icon_X_Black}" 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Center"
                        />
                    </Button>
                </WrapPanel>
            </Grid>

            <!--Body-->
            <Grid Grid.Row="1" Width="1020" Height="660">

                <Grid.Effect>
                    <DropShadowEffect 
         			    BlurRadius="10"
                        Color="Gray"
                        ShadowDepth="5"
                        Opacity=".35"
                        Direction="270"
                    />
                </Grid.Effect>

                <Border Background="White" BorderBrush="White" BorderThickness="4" CornerRadius="20" Margin="-50,-20,-46,0">
                    <Grid>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="80"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70*"/>
                                <ColumnDefinition Width="30*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" Grid.Column="0">

                                <Search:Search IconSize="20" 
                                                Height="46" 
                                                Margin="20, 17, 0, 17"  
                                                Width="350"
                                                Corner="12"
                                                FontFamily="{StaticResource MaterialDesignFont}"
                                                FontSize="15"    
                                                FontWeight="Thin" 
                                                x:Name="SearchBox"></Search:Search>
                                <Border>
                                    <Border.Effect>
                                        <DropShadowEffect
                                            BlurRadius="10"
                                            Color="Black"
                                            ShadowDepth="4"
                                            Opacity=".25"
                                            Direction="270"/>
                                    </Border.Effect>

                                    <Button Style="{StaticResource CustomButton}" 
                                            Width="140" 
                                            Height="50" 
                                            Margin="40,0,0,0">
                                        <StackPanel Orientation="Horizontal" 
                                                    Width="143" 
                                                    HorizontalAlignment="Center" >
                                            <Image 
                                                Source="{StaticResource Icon_Them}" 
                                                Width="34" Height="34" 
                                                Margin="12,0,0,0"/>
                                            <TextBlock FontFamily="{StaticResource MaterialDesignFont}" 
                                                       Text="Thêm" 
                                                       FontSize="22"
                                                       FontWeight="Normal"
                                                       Margin="6,5,0,0"/>
                                        </StackPanel>
                                    </Button>
                                </Border>

                            </StackPanel>

                            <Grid Grid.Column="1">
                                <Border>

                                    <Border.Effect>
                                        <DropShadowEffect
                                            BlurRadius="10"
                                            Color="Black"
                                            ShadowDepth="4"
                                            Opacity=".25"
                                            Direction="270"/>
                                    </Border.Effect>

                                    <Button Style="{StaticResource CustomButton}" 
                                            Width="180" 
                                            Height="50" 
                                            Margin="20,0,0,0">
                                        <StackPanel Orientation="Horizontal" 
                                                    Width="143" 
                                                    HorizontalAlignment="Center" >
                                            <materialDesign:PackIcon Kind="Download" Width="30" Height="30"/>
                                            <TextBlock FontFamily="{StaticResource MaterialDesignFont}" 
                                                       Text="Tải danh sách" 
                                                       FontSize="15"
                                                       FontWeight="Normal"
                                                       Margin="2,5,0,0"/>
                                        </StackPanel>
                                    </Button>
                                </Border>
                            </Grid>
                        </Grid>

                        <Grid Grid.Row="1">
                            <Border Grid.Row="1" 
                                    Margin="20 0 20 20" 
                                    CornerRadius="20" 
                                    Background="White">
                                <materialDesign:Card UniformCornerRadius="20">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto"  >
                                        <ListView x:Name="MovieListView"
                                                  ItemsSource="{Binding MovieList}"
                                                  SelectedItem="{Binding SelectedItem}"
                                                  Focusable="True"
                                                  Height="578"
                                                  ToolTip="Nháy đúp để xem chi tiết">
                                            <!--<i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseDoubleClick">
                                                    <i:InvokeCommandAction Command="{Binding LoadInforMovieCM}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>-->
                                            <ListView.View>
                                                <GridView>
                                                    <GridViewColumn Header="Tên phim" Width="300">
                                                        <GridViewColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding DisplayName}" FontSize="18" />
                                                            </DataTemplate>
                                                        </GridViewColumn.CellTemplate>
                                                    </GridViewColumn>

                                                    <GridViewColumn Header="Loại phim" Width="130">
                                                        <GridViewColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding MovieType}"
                                                                           Margin="5,0,0,0"
                                                                           FontSize="18" />
                                                            </DataTemplate>
                                                        </GridViewColumn.CellTemplate>
                                                    </GridViewColumn>

                                                    <GridViewColumn Header="Quốc gia" Width="170">
                                                        <GridViewColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding Country}"
                                                                           Margin="10,0,0,0"
                                                                           FontSize="18" />
                                                            </DataTemplate>
                                                        </GridViewColumn.CellTemplate>
                                                    </GridViewColumn>

                                                    <GridViewColumn Header="Thể loại" Width="150">
                                                        <GridViewColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding Genre}"
                                                                           Margin="10,0,0,0"
                                                                           FontSize="18" />
                                                            </DataTemplate>
                                                        </GridViewColumn.CellTemplate>
                                                    </GridViewColumn>

                                                    <GridViewColumn Header="Thời lượng(phút)" Width="176">
                                                        <GridViewColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding RunningTime}"
                                                                           Margin="10,0,0,0"
                                                                           FontSize="18" />
                                                            </DataTemplate>
                                                        </GridViewColumn.CellTemplate>
                                                    </GridViewColumn>

                                                    <GridViewColumn>
                                                        <GridViewColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <Border BorderBrush="Black"
                                                                            BorderThickness="0.5"
                                                                            CornerRadius="5"
                                                                            Cursor="Hand">
                                                                        <Border.Style>
                                                                            <Style TargetType="Border">
                                                                                <Style.Triggers>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter Property="Background" Value="#00e5ff" />
                                                                                    </Trigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </Border.Style>

                                                                        <StackPanel>
                                                                            <Image Source="{StaticResource Icon_Edit}" Width="30" Height="30"/>
                                                                        </StackPanel>
                                                                        <!--<i:Interaction.Triggers>
                                                                            <i:EventTrigger EventName="MouseLeftButtonUp">
                                                                                <i:InvokeCommandAction Command="{Binding ElementName=MovieListView, Path=DataContext.LoadEditMovieCM}" />
                                                                            </i:EventTrigger>
                                                                        </i:Interaction.Triggers>-->
                                                                    </Border>
                                                                    <Border BorderThickness="0.5"
                                                                            BorderBrush="Black"
                                                                            CornerRadius="5"
                                                                            Margin="10,0,0,0"
                                                                            Cursor="Hand">
                                                                        <Border.Style>
                                                                            <Style TargetType="Border">
                                                                                <Style.Triggers>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter Property="Background" Value="#ff6255" />
                                                                                    </Trigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </Border.Style>

                                                                        <StackPanel>
                                                                            <materialDesign:PackIcon Kind="GarbageCanEmpty" Width="30" Height="30"/>
                                                                        </StackPanel>
                                                                        <!--<i:Interaction.Triggers>
                                                                            <i:EventTrigger EventName="MouseLeftButtonUp">
                                                                                <i:InvokeCommandAction Command="{Binding ElementName=MovieListView, Path=DataContext.LoadDeleteMovieCM}" />
                                                                            </i:EventTrigger>
                                                                        </i:Interaction.Triggers>-->
                                                                    </Border>
                                                                </StackPanel>

                                                            </DataTemplate>
                                                        </GridViewColumn.CellTemplate>
                                                    </GridViewColumn>
                                                </GridView>
                                            </ListView.View>

                                        </ListView>
                                    </ScrollViewer>
                                </materialDesign:Card>

                            </Border>
                        </Grid>

                    </Grid>
                </Border>

            </Grid>


        </Grid>
    </Grid>
</Page>
