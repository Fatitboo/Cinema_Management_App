<Page x:Class="CinemaManagementProject.View.Admin.StatisticalManagement.IncomeStatistical"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CinemaManagementProject.View.Admin.StatisticalManagement"
      xmlns:FilterCombobox="clr-namespace:CinemaManagementProject.Component.FilterCombobox"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      xmlns:Component="clr-namespace:CinemaManagementProject.Component" 
      mc:Ignorable="d" 
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      d:DesignHeight="630" d:DesignWidth="1140"
      x:Name="mainPage"
      Title="IncomeStatistical"
      DataContext="{StaticResource StaffManagementVM}">


    <Page.Triggers>
        <EventTrigger RoutedEvent="Page.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="mainPage"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0"
                                     To="1"
                                     Duration="0:0:0.5" />


                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>

    <Grid>
        <Grid>
            <Border CornerRadius="20" Background="#54B435" Margin="20,10,20,10">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="14"
                                Color="Black"
                                ShadowDepth="4"
                                Opacity=".35"
                                Direction="270"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0"
                              Width="200" Height="50" 
                              HorizontalAlignment="Right" 
                              VerticalAlignment="Center" 
                              Margin="0,0,10,0" 
                              x:Name="_period"> 
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Rectangle Grid.Column="0" Grid.ColumnSpan="2" Fill="White" RadiusX="10" RadiusY="10">
                                <Rectangle.Effect>
                                    <DropShadowEffect
                                        BlurRadius="10"
                                        Opacity="0.25"
                                        Direction="270"
                                        Color="Black" /> 
                                </Rectangle.Effect>
                            </Rectangle>
                            <Image Source="{StaticResource IconFilter}" Width="20" Height="20"></Image>
                            <ComboBox SelectedItem="{Binding SelectedIncomePeriod}"
                                        Foreground="Black" 
                                        Grid.Column="1" 
                                        Background="Transparent" 
                                        materialDesign:HintAssist.Hint="Lọc theo"
                                        FontFamily="{StaticResource MaterialDesignFont}" 
                                        FontSize="16" FontWeight="Medium" 
                                        Margin="0,0,10,0"
                                        SelectedIndex="0"
                                        x:Name="periodbox"
                                        SelectionChanged="periodbox_SelectionChanged"
                                        Loaded="periodbox_Loaded"> 
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Loaded">
                                        <i:InvokeCommandAction Command="{Binding ChangeIncomePeriodCM}"
                                                       CommandParameter="{Binding ElementName=periodbox}" />
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="SelectionChanged">
                                        <i:InvokeCommandAction Command="{Binding ChangeIncomePeriodCM}"
                                                       CommandParameter="{Binding ElementName=periodbox}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <ComboBoxItem>Theo năm</ComboBoxItem>
                                <ComboBoxItem>Theo tháng</ComboBoxItem>
                            </ComboBox>
                        </Grid>

                        <Grid Grid.Column="1" 
                              Width="200" Height="50" 
                              HorizontalAlignment="Left" 
                              VerticalAlignment="Center" 
                              Margin="10,0,0,0" 
                              x:Name="_time"> 
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Rectangle Grid.Column="0" Grid.ColumnSpan="2" Fill="White" RadiusX="10" RadiusY="10">
                                <Rectangle.Effect>
                                    <DropShadowEffect
                                        BlurRadius="10"
                                        Opacity="0.25"
                                        Direction="270"
                                        Color="Black" /> 
                                </Rectangle.Effect>
                            </Rectangle>
                            <Image Source="{StaticResource IconFilter}" Width="20" Height="20"></Image>
                            <ComboBox SelectedItem="{Binding SelectedIncomeTime,Mode=OneWayToSource}"
                                        Foreground="Black" 
                                        Grid.Column="1" 
                                        Background="Transparent" 
                                        FontFamily="{StaticResource MaterialDesignFont}" 
                                        FontSize="16" FontWeight="Medium" 
                                        Margin="0,0,10,0"
                                        x:Name="Timebox"> 
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Loaded">
                                        <i:InvokeCommandAction Command="{Binding ChangeIncomePeriodCM}"
                                                       CommandParameter="{Binding ElementName=Timebox}" />
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="SelectionChanged">
                                        <i:InvokeCommandAction Command="{Binding ChangeIncomePeriodCM}"
                                                       CommandParameter="{Binding ElementName=Timebox}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </ComboBox>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="1" Margin="10" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40*"/>
                            <ColumnDefinition Width="60*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30*"/>
                                <RowDefinition Height="30*"/>
                                <RowDefinition Height="40*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:Card Margin="10"
                                                     UniformCornerRadius="10"
                                                     Grid.Column="0">
                                    <Grid Width="170" Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30*"/>
                                            <RowDefinition Height="70*"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Grid.Row="0">
                                            <StackPanel Orientation="Horizontal">
                                                <Label Content="Thu:"
                                                       FontWeight="Bold"
                                                       FontSize="15" />
                                                <TextBox Text="{Binding ReveRate}"
                                                         BorderThickness="0"
                                                         IsHitTestVisible="False"
                                                         FontStyle="Italic"
                                                         FontSize="15"
                                                         TextChanged="TextBox_TextChanged"/>
                                                <!--Tăng 🠕-->
                                            </StackPanel>
                                        </StackPanel>
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40*"/>
                                                <ColumnDefinition Width="60*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Margin="5,0,0,0">
                                                <Label Content="Vé" FontSize="18" />
                                                <Label Content="{Binding TicketPc}"
                                                       FontWeight="Bold" />
                                                <Label Content="{Binding TicketReve}" />
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                                <Label Content="Sản phẩm" FontSize="18" />
                                                <Label Content="{Binding ProductPc}"
                                                       FontWeight="Bold"/>
                                                <Label Content="{Binding ProductReve}" />
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </materialDesign:Card>
                                <materialDesign:Card Margin="10"
                                                     UniformCornerRadius="10"
                                                     Grid.Column="1">
                                    <Grid Width="170" Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30*"/>
                                            <RowDefinition Height="70*"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel Grid.Row="0">
                                            <Label Content="Chi:"
                                                        FontWeight="Bold"
                                                        FontSize="18" />
                                            <TextBox Text="{Binding ExpeRate}"
                                                         FontSize="18"
                                                         IsHitTestVisible="False"
                                                         BorderThickness="0"
                                                         TextChanged="TextBox_TextChanged_1"/>
                                        </StackPanel>
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="52*"/>
                                                <ColumnDefinition Width="48*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <Label Content="Sản phẩm" FontSize="18" />
                                                <Label Content="{Binding ProductExPc}"
                                                           FontWeight="Bold" />
                                                <Label Content="{Binding ProductExpe}" />
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                                <Label Content="Sửa chữa" FontSize="18" />
                                                <Label Content="{Binding RepairPc}"
                                                           FontWeight="Bold"/>
                                                <Label Content="{Binding RepairExpe}" />
                                            </StackPanel>
                                        </Grid>
                                    </Grid>

                                </materialDesign:Card>
                                
                            </Grid>
                            <materialDesign:Card Margin="10"
                                                 UniformCornerRadius="10"
                                                 Grid.Row="1">
                                <Grid >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="25*" />
                                        <RowDefinition Height="75*" />
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0">
                                        <Label Content="Tổng thu chi (VND): "
                                                   FontSize="15"
                                                   FontWeight="Bold"
                                                   Margin="10,10,0,0"
                                                   Grid.Row="0" />
                                    </StackPanel>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="70*" />
                                            <ColumnDefinition Width="30*" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <StackPanel Margin="10,0,0,0">
                                                <Label Content="Thu"
                                                       FontWeight="Bold" />
                                                <StackPanel Width="250"
                                                        HorizontalAlignment="Left">
                                                    <ProgressBar BorderBrush="Transparent"
                                                             Height="15"
                                                             x:Name="pb1"
                                                             Value="{Binding TotalInPc}">
                                                        <ProgressBar.Style>
                                                            <Style TargetType="{x:Type ProgressBar}">
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="{x:Type ProgressBar}">
                                                                            <Grid MinHeight="14"
                                                                                        MinWidth="200">
                                                                                <Border Name="PART_Track"
                                                                                    CornerRadius="8" />
                                                                                <Border Name="PART_Indicator"
                                                                                    CornerRadius="8"
                                                                                    BorderThickness="1"
                                                                                    Background="#0c70b6"
                                                                                    HorizontalAlignment="Left" />
                                                                            </Grid>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Style>
                                                        </ProgressBar.Style>
                                                        <ProgressBar.Triggers>
                                                            <EventTrigger RoutedEvent="ProgressBar.ValueChanged">
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <ThicknessAnimation Storyboard.TargetName="pb1"
                                                                                        Storyboard.TargetProperty="Margin"
                                                                                        From="0 0 250 0"
                                                                                        To="0 0 0 0"
                                                                                        Duration="0:0:0.5" />


                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </EventTrigger>
                                                        </ProgressBar.Triggers>

                                                    </ProgressBar>
                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Margin="10,10,0,0">
                                                <Label Content="Chi"
                                                   FontWeight="Bold" />
                                                <StackPanel Width="250"
                                                        HorizontalAlignment="Left">
                                                    <ProgressBar Minimum="0"
                                                             Maximum="100"
                                                             BorderBrush="Transparent"
                                                             Height="15"
                                                             x:Name="pb2"
                                                             Value="{Binding TotalOutPc}">
                                                        <ProgressBar.Style>
                                                            <Style TargetType="{x:Type ProgressBar}">
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="{x:Type ProgressBar}">
                                                                            <Grid MinHeight="14"
                                                                              MinWidth="200">
                                                                                <Border Name="PART_Track"
                                                                                    CornerRadius="8" />
                                                                                <Border Name="PART_Indicator"
                                                                                    CornerRadius="8"
                                                                                    BorderThickness="1"
                                                                                    Background="OrangeRed"
                                                                                    HorizontalAlignment="Left" />
                                                                            </Grid>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Style>
                                                        </ProgressBar.Style>
                                                        <ProgressBar.Triggers>
                                                            <EventTrigger RoutedEvent="ProgressBar.ValueChanged">
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <ThicknessAnimation Storyboard.TargetName="pb2"
                                                                                        Storyboard.TargetProperty="Margin"
                                                                                        From="0 0 250 0"
                                                                                        To="0 0 0 0"
                                                                                        Duration="0:0:0.5" />


                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </EventTrigger>

                                                        </ProgressBar.Triggers>
                                                    </ProgressBar>
                                                </StackPanel>
                                            </StackPanel>

                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding TotalIn}"
                                                   Margin="0,22,0,0"
                                                   FontWeight="Bold"
                                                   Foreground="Black"/>
                                            <TextBlock Text="{Binding TotalOut}"
                                                   Margin="0,32,0,0"
                                                   FontWeight="Bold"
                                                   Foreground="Black"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </materialDesign:Card>

                            <materialDesign:Card Margin="10"
                                                 UniformCornerRadius="10"
                                                 Grid.Row="2">
                                <StackPanel>
                                    <StackPanel.Resources>
                                        <ResourceDictionary>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontSize" Value="20" />
                                                <Setter Property="Margin" Value="20,16,0,0" />
                                            </Style>
                                        </ResourceDictionary>
                                    </StackPanel.Resources>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Chu kỳ:" FontSize="16" FontWeight="Bold" Width="105" />
                                        <TextBlock Text="{Binding Path=Text,ElementName=periodbox}" FontSize="16" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Thời gian:" FontSize="16" FontWeight="Bold" Width="105" />
                                        <TextBlock Text="{Binding Path=Text,ElementName=Timebox}" FontSize="16"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Số hoá đơn:" FontSize="16" FontWeight="Bold" Width="105" />
                                        <TextBlock Text="{Binding TotalBill}" FontSize="16"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Lợi nhuận:" FontSize="16" FontWeight="Bold" Width="105" />
                                        <TextBlock Text="{Binding TrueIncome}" FontSize="16"/>
                                    </StackPanel>
                                </StackPanel>
                            </materialDesign:Card>
                        </Grid>
                        <materialDesign:Card Grid.Column="1" 
                                             Margin="10,0,0,0" 
                                             x:Name="cardRight"
                                             UniformCornerRadius="10">
                            <Grid>
                                <lvc:CartesianChart LegendLocation="Bottom"
                                                    Series="{Binding InComeData,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                    Width="620" Height="490">
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:AxesCollection>
                                            <lvc:Axis MinValue="1"
                                              MaxValue="{Binding LabelMaxValue}">
                                                <lvc:Axis.Separator>
                                                    <lvc:Separator Step="1" />
                                                </lvc:Axis.Separator>
                                            </lvc:Axis>
                                        </lvc:AxesCollection>
                                    </lvc:CartesianChart.AxisX>

                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis Title="Triệu đồng"
                                              FontFamily="arial"
                                              MinValue="0" />
                                    </lvc:CartesianChart.AxisY>
                                </lvc:CartesianChart>
                            </Grid>
                        </materialDesign:Card>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
